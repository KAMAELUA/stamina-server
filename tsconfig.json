{
  "compilerOptions": {
    "target": "ES2023",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "strictPropertyInitialization": false
  },
  "include": ["src", "main.ts"],
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "experimentalResolver": true,
    "logError": true
  }
}
